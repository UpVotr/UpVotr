  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug UpVotr",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"],
      "serverReadyAction": {
        "pattern": "Ready on.* (https?://\\S+|[0-9]+)",
        "uriFormat": "http://%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Debug UpVotr (debug logging)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev:debug"],
      "serverReadyAction": {
        "pattern": "Ready on (.*)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
