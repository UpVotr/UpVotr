{
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": false,
    "target": "es2020",
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.d.ts", "./src/**/*.ts", "../query/**/*.ts"],
  "exclude": ["node_modules"]
}
